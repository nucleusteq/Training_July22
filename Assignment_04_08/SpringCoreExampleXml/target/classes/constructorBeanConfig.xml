<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean name="student1" class="com.mt.training.ConstructorInjection.Student">
   		<constructor-arg value="39"/>
   		<constructor-arg value="Parth Waghela"/>
   		<constructor-arg value="22"/>
   		<constructor-arg value="123"/>
   </bean>
   
   <bean name="student2" class="com.mt.training.ConstructorInjection.Student">
   		<constructor-arg value="11"/>
   		<constructor-arg value="Anubhuti Singh"/>
   		<constructor-arg value="24"/>
   		<constructor-arg value="456"/>
   </bean>
   
  
   
   <bean name="schooll" class="com.mt.training.ConstructorInjection.School">
   		<constructor-arg value="NucleusTeq"/>
   		<constructor-arg value="258"/>
   		<constructor-arg>
   			<list>
   				<ref bean="student1"/>
   				<ref bean="student2"/>
   			
   			</list>
   		</constructor-arg>
   </bean>
</beans>  