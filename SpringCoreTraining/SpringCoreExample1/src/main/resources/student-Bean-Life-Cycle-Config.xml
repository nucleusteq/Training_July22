<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean name="student" class="com.mt.training.springBeanLifeCycle.Student" init-method="customInit" destroy-method="customDestroy">
		<property name="id" value="999"></property>
		<property name="name" value="Manprit Singh"></property>
	</bean>
	<bean name="studentPostProcessor" class="com.mt.training.springBeanLifeCycle.StudentBeanPostProcessor">
	</bean>
</beans>   