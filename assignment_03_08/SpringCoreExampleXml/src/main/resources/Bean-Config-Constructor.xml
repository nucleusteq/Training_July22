<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
   
   <bean name="employee1" class="com.nt.training.ConstructorInjection.Employee">
   		<constructor-arg value="1"/>
   		<constructor-arg value="Shreya"/>
   		<constructor-arg value="23"/>
   		<constructor-arg value="9865478956"/>
   </bean>
   
   <bean name="employee2" class="com.nt.training.ConstructorInjection.Employee">
   		<constructor-arg value="2"/>
   		<constructor-arg value="Parth"/>
   		<constructor-arg value="22"/>
   		<constructor-arg value="9755056421"/>
   </bean>
   
   <bean name="officee" class="com.nt.training.ConstructorInjection.Office">
   		<constructor-arg value="Nucleusteq"/>
   		<constructor-arg value="9556612589"/>
   		<constructor-arg>
   			<list>
   				<ref bean="employee1"/>
   				<ref bean="employee2"/>
   			</list>
   		</constructor-arg>
   </bean>
</beans>  